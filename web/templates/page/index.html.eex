<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Weight <small>...measured <%= @last_weighin.taken_at %></small></h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <h2><%= @last_weighin.weight %> KG</h2>
        <h2><%= to_lbs(@last_weighin.weight) %> LBS</h2>
      </li>
    </ul>
  </div>
</div>

<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Calorie intake for today</h3>
    </div>
    <ul class="list-group">
      <li class="list-group-item">
        <h2>
          <%= calories(@current_intake) %>
          / 2295
        </h2>
      </li>
    </ul>
  </div>
</div>

<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Last Weighin's</h3>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Weight</th>
          <th>Fat mass (kg)</th>
          <th>Bodyfat %</th>
          <th>Lean mass (kg)</th>
          <th>Measured</th>
        </tr>
      </thead>
      <tbody>
        <%= for measure <- @weighins do %>
          <tr>
            <td><%= measure.weight %></td>
            <td><%= measure.bodyfat_mass %></td>
            <td><%= measure.bodyfat_percentage %></td>
            <td><%= measure.lean_mass %></td>
            <td><%= measure.taken_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Macronutrients</h3>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Date</th>
          <th>Calories</th>
          <th>Carbs</th>
          <th>Fat</th>
          <th>Protein</th>
        </tr>
      </thead>
      <tbody>
        <%= for macro <- @macros do %>
          <tr>
            <td><%= link(macro.logged_date, to: "http://www.myfitnesspal.com/food/diary/callumbarratt?date=#{macro.logged_date}") %></td>
            <td><%= macro.calories %> calories</td>
            <td><%= macro.carbs %>g</td>
            <td><%= macro.fat %>g</td>
            <td><%= macro.protein %>g</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
